@{
    ViewData["Title"] = "Cambiar Contrase単a";
}
<h2>Cambiar Contrase単a</h2>

<form asp-action="CambiarContrasena" method="post">
    <div class="form-group">
        <label>Contrase単a Actual</label>
        <input type="password" name="contrasenaActual" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Nueva Contrase単a</label>
        <input type="password" name="nuevaContrasena" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Cambiar</button>
</form>

@if (ViewBag.Mensaje != null)
{
    <div class="alert alert-success">@ViewBag.Mensaje</div>
}

@foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
{
    <div class="alert alert-danger">@error.ErrorMessage</div>
}